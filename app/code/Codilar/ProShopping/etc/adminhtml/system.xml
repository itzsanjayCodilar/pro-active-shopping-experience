<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="pro_shopping" translate="label" sortOrder="1000">
            <label>Pro-Active Shopping</label>
        </tab>
        <section id="pro_core" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Pro Shopping Core</label>
            <tab>pro_shopping</tab>
            <resource>Codilar_ProShopping::product_recommendation</resource>
            <group id="pro_" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Core configuration</label>
                <field id="is_pro_enable" translate="label" type="select" sortOrder="14" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Is Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
            </group>
        </section>

        <section id="proshopping" translate="label" type="text" sortOrder="1000" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>ProShopping</label>
            <tab>Pro-Active Shopping</tab>
            <resource>Codilar_ProShopping::proshopping</resource>
            <group id="active_display" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Contact Page Settings</label>
                <field id="enabled_proshopping" translate="label" type="select" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable ProShopping</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <backend_model>Magento\Contact\Model\System\Config\Backend\Links</backend_model>
                </field>
            </group>

            <group id="popup_display" translate="label" type="text" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Quick Contact Popup Settings</label>
                <field id="enabled_popup" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Popup</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <backend_model>Magento\Contact\Model\System\Config\Backend\Links</backend_model>
                </field>

                <field id="popup_view" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Popup Position</label>
                    <source_model>Codilar\ProShopping\Model\Config\Source\ListMode</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
